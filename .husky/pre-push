#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "üöÄ Running pre-push checks..."

# Run linting with warnings allowed (only fail on errors)
pnpm lint --max-warnings 2000 || echo "‚ö†Ô∏è  Linting warnings found but allowing push to continue"

# Run format check
pnpm format:check || echo "‚ö†Ô∏è  Format issues found but allowing push to continue"

# Run type check (this should still fail on errors)
pnpm type-check

echo "‚úÖ Pre-push checks completed!"