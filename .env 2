# Multi-Sided Platform Environment Variables

# Node Environment
NODE_ENV=development

# Database URLs (adjust ports if needed)
AUTH_DATABASE_URL=postgresql://platform_user:platform_pass@localhost:5433/auth_db
ECOMMERCE_DATABASE_URL=postgresql://platform_user:platform_pass@localhost:5433/ecommerce_db
TAXI_DATABASE_URL=postgresql://platform_user:platform_pass@localhost:5433/taxi_db
HOTEL_DATABASE_URL=postgresql://platform_user:platform_pass@localhost:5433/hotel_db
PAYMENT_DATABASE_URL=postgresql://platform_user:platform_pass@localhost:5433/payment_db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
