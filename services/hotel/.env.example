# Server Configuration
NODE_ENV=development
PORT=3005

# Database Configuration
# PostgreSQL connection string for the hotel service database
DATABASE_URL=postgresql://user:password@localhost:5432/hotel_db

# Supabase Configuration (Required)
# Get these values from your Supabase project settings at https://app.supabase.com
# Project Settings > API > Project URL
SUPABASE_URL=https://your-project-id.supabase.co
# Project Settings > API > Project API keys > anon public
SUPABASE_ANON_KEY=your-anon-key-here
# Project Settings > API > Project API keys > service_role (Keep this secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Redis Configuration (Upstash or local Redis)
# For Upstash: Get from https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token-here
# Standard Redis connection string (for local or cloud Redis)
REDIS_URL=redis://localhost:6379

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging
LOG_LEVEL=info

# Optional: Cache Configuration
CACHE_TTL=3600
AVAILABILITY_CACHE_TTL=300

# Optional: Business Configuration
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=UTC
BOOKING_HOLD_DURATION=900