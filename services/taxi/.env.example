# Database
DATABASE_URL="postgresql://username:password@localhost:5432/taxi_service_db"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Server Configuration
PORT=3005
NODE_ENV=development

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# External Services
AUTH_SERVICE_URL="http://localhost:3001"
PAYMENT_SERVICE_URL="http://localhost:3003"
NOTIFICATION_SERVICE_URL="http://localhost:3004"
UPLOAD_SERVICE_URL="http://localhost:3006"

# Maps and Location Services
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# Real-time Configuration
SOCKET_IO_CORS_ORIGIN="http://localhost:3000"
LOCATION_UPDATE_INTERVAL=5000
TRACKING_PRECISION=10

# Pricing Configuration
BASE_FARE=2.50
RATE_PER_KM=1.20
RATE_PER_MINUTE=0.30
SURGE_MULTIPLIER_MAX=3.0
COMMISSION_RATE=0.20

# Safety and Security
EMERGENCY_CONTACT_NUMBER="+1234567890"
INCIDENT_WEBHOOK_URL="https://your-safety-monitoring-service.com/webhook"

# Performance
MAX_CONCURRENT_RIDES=1000
CACHE_TTL=300
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH="./logs"

# Development
ENABLE_SWAGGER=true
ENABLE_CORS=true
CORS_ORIGIN="http://localhost:3000"