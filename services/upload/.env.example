# Upload Service Environment Variables

# Server Configuration
PORT=3005
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/upload_service
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/upload_service_test

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=upload:
REDIS_MAX_CONNECTIONS=10
REDIS_RETRY_ATTEMPTS=3
REDIS_RETRY_DELAY=1000

# Storage Configuration
STORAGE_TYPE=local
STORAGE_BASE_PATH=./uploads
STORAGE_CREDENTIALS=
STORAGE_OPTIONS=

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10

# Security Configuration
JWT_SECRET=your-jwt-secret-key
JWT_ISSUER=platform-auth
JWT_AUDIENCE=platform-services
JWT_ALGORITHM=HS256
ENABLE_AUTH=true
ENABLE_MALWARE_SCANNING=false
ENABLE_CONTENT_VALIDATION=true
ENABLE_INTEGRITY_CHECK=true
ENABLE_ENCRYPTION=false
ENCRYPTION_ALGORITHM=aes-256-gcm
KEY_ROTATION_INTERVAL=86400000

# Image Processing
ENABLE_IMAGE_PROCESSING=true
DEFAULT_IMAGE_QUALITY=80
MAX_CONCURRENT_JOBS=5
ENABLE_ASYNC_PROCESSING=true
PROCESSING_QUEUE_NAME=upload-processing
MAX_PROCESSING_RETRIES=3
PROCESSING_RETRY_DELAY=5000

# CDN Configuration
CDN_BASE_URL=
CDN_ENABLED=false

# Monitoring and Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=console
ENABLE_METRICS=false
METRICS_ENDPOINT=/metrics
METRICS_INTERVAL=60000
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=5000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Connection
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=30000
DB_SSL=false

# External Services
MALWARE_SCANNER_PROVIDER=clamav
MALWARE_SCANNER_API_KEY=
MALWARE_SCAN_TIMEOUT=30000

# File URL Security
FILE_URL_SECRET=your-file-url-secret

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Google Cloud Storage Configuration (optional)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_STORAGE_BUCKET=
GOOGLE_APPLICATION_CREDENTIALS=