# Upload Service Configuration

# Server Configuration
PORT=3003
NODE_ENV=development
BASE_URL=http://localhost:3003

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/upload_service_db"
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/upload_service_test_db"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
TEST_REDIS_URL="redis://localhost:6379/1"

# Storage Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_IMAGE_TYPES="image/jpeg,image/jpg,image/png,image/webp"
ALLOWED_DOCUMENT_TYPES="application/pdf,text/plain,application/msword"

# CDN Configuration
CDN_BASE_URL="https://cdn.example.com"
CDN_ENABLED=false

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# Google Cloud Storage Configuration (optional)
GOOGLE_CLOUD_PROJECT_ID=""
GOOGLE_CLOUD_STORAGE_BUCKET=""
GOOGLE_APPLICATION_CREDENTIALS=""

# Security Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
SERVICE_TOKEN_SECRET="your-service-token-secret"

# Processing Configuration
ENABLE_VIRUS_SCANNING=false
VIRUS_SCANNER_API_URL=""
VIRUS_SCANNER_API_KEY=""

# Image Processing Configuration
DEFAULT_IMAGE_QUALITY=85
THUMBNAIL_SIZES="150,300,600"
AUTO_WEBP_CONVERSION=true

# Monitoring Configuration
LOG_LEVEL="info"
ENABLE_METRICS=true
METRICS_PORT=9090