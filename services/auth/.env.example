# Database Configuration
DATABASE_URL=postgresql://platform_user:platform_pass@localhost:5433/auth_db

# JWT Configuration
JWT_SECRET=dev-auth-service-jwt-secret-key-2024-secure-token-abc123XYZ789
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=development
AUTH_PORT=3001

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5        # Auth endpoints
PASSWORD_RATE_LIMIT_MAX=3    # Password operations

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800000  # 30 minutes in ms
PASSWORD_HISTORY_COUNT=5

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourplatform.com

# SMS Configuration
SMS_PROVIDER_URL=https://api.twilio.com/2010-04-01
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60000  # 1 minute

# Development Configuration
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGGING=false
ENABLE_QUERY_LOGGING=false

# External Services
NOTIFICATION_SERVICE_URL=http://localhost:3002
UPLOAD_SERVICE_URL=http://localhost:3003
ECOMMERCE_SERVICE_URL=http://localhost:3004

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000