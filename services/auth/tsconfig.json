{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/controllers/*": ["controllers/*"],
      "@/services/*": ["services/*"],
      "@/middleware/*": ["middleware/*"],
      "@/utils/*": ["utils/*"],
      "@/types/*": ["types/*"],
      "@/generated/*": ["generated/*"]
    }
  },
  "include": ["src/**/*", "prisma/schema.prisma"],
  "exclude": ["src/**/*.test.ts", "src/**/__tests__/**/*"],
  "references": [{ "path": "../../shared/types" }]
}
